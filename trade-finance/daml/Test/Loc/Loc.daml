module Test.Loc.Loc where

import Daml.Script
import Loc.Applicant as A
import Loc.Model as P
import Loc.Accountant as Accountant
import Loc.Loc as L

test_loc = do
    marques <- allocateParty "Marques"
    grilo <- allocateParty "Grilo"
    caixa <- allocateParty "Caixa Geral de Depositos"
    shipper <- allocateParty "CTT"
    
    let
      caixa_bank = Bank with
        party = caixa
        address = "Avenida da Liberdade"
    productCid <- submit marques do 
        createCmd P.Product with
                    issuer = marques
                    owner = grilo
                    item = "BOI"
                    price = Cash with
                            currency = "EUR"
                            amount = 1000.0

    applicant <- submit marques do 
        createCmd A.Applicant with
            issuer = marques

    proposalCid <- submit marques do 
        exerciseCmd applicant Buy 
            with owner = grilo
                 product = productCid

    agreementCid <- submit grilo do exerciseCmd proposalCid Contract

    grilo_accountCid <-submit grilo do 
                createCmd Account 
                    with
                        owner = grilo
                        bank = caixa_bank
                        number = "PT50155825912812112342342342332234"
    Some grilo_account <- queryContractId grilo grilo_accountCid  
    preparationCid <- submit grilo do 
        exerciseCmd agreementCid Preparation 
                    with account = grilo_account
                         shipper
    marques_accountCid <-submit marques do 
                createCmd Account 
                    with
                        owner = marques
                        bank = caixa_bank
                        number = "PT50155825912812112342342342332211"
    Some marques_account <- queryContractId marques marques_accountCid  
    sale <- submit marques do 
        exerciseCmd preparationCid Approach 
                    with account = marques_account
    -- Loc test

    let 
        loc = Loc with
            sale
            rules = [Rule with 
                            condition = "50% no inicio"
                            description = "Dar 50% do dinheiro para começar a fazer o envio dos bois"
                     , Rule with 
                            condition = "Restante 50% apenas na chegada"
                            description = "Apenas é pago o montate restante na chegada dos bois"
                    ]
            issuerLevel1Approver     = marques
            bankIssuerLevel2Approver = caixa_bank.party
            bankOwnerLevel3Approver  = caixa_bank.party
            ownerLevel4Approver      = grilo
            shipLevel5Approver       = shipper
            bankIssuerLevel6Approver = caixa_bank.party
            bankOwnerLevel7Approver  = caixa_bank.party

    assert(loc.issuerLevel1Approver == marques)

    -- marques vai criar uma nota de credito (loc) para o seu banco
    proposed <- submit marques do createCmd Proposed with content = loc
    -- marques valida a sua intecao
    marques_confirmation  <- submit marques do exerciseCmd proposed Level1Approve
    bank_issuer_confirmation <- submit caixa do exerciseCmd marques_confirmation Level2Approve with loc
    bank_owner_confirmation <- submit caixa do exerciseCmd bank_issuer_confirmation Level3Approve with loc
    owner_confirmation <- submit grilo do exerciseCmd bank_owner_confirmation Level4Approve with loc
    shipper_confirmation <- submit shipper do exerciseCmd owner_confirmation Level5Approve with loc
    bank_owner_confirmation <- submit caixa do exerciseCmd shipper_confirmation Level6Approve with loc
    bank_issuer_confirmation <- submit caixa do exerciseCmd bank_owner_confirmation FullyApprove with loc
    assert(loc.issuerLevel1Approver == marques)
    -- marques termina loc
    submit marques do exerciseCmd bank_issuer_confirmation EndLoc

    
